{
  "page":
  {
    "title":
    {
      "required": true,
      "length":
      {
        "min": 10,
        "max": 255
      },
      "regex": "/.*/ui"
    },
    "description":
    {
      "required": false,
      "length":
      {
        "min": 0,
        "max": 10000
      },
      "regex": "/.*/ui"
    },
    "keyword":
    {
      "length":
      {
        "min": 0,
        "max": 140
      },
      "regex": "/[\\w]+/ui"
    },
    "keywords":
    {
      "required": false,
      "quantity":
      {
        "min": 0,
        "max": 20
      }
    },
    "image":
    {
      "required": false,
      "mime": [
        "image/png",
        "image/gif",
        "image/jpeg",
        "image/webp"
      ],
      "quantity":
      {
        "min": 0,
        "max": 20
      }
    },
    "torrent":
    {
      "required": true,
      "mime": [
        "application/x-bittorrent"
      ],
      "quantity":
      {
        "min": 0,
        "max": 20
      }
    }
  }
}
