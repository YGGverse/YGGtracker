                        <td>
                            {{ torrent.scrape.peers }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{ 'Leechers'|trans }}
                        </td>
                        <td>
                            {{ torrent.scrape.leechers }}
                        </td>
                    </tr>
