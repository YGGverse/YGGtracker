                            <td>
                                {{ file.created | format_date }}
                            </td>
                        </tr>
                    {% endif %}

                    {% if file.size %}
                        <tr>
                            <td>
                                {{ 'Size'|trans }}
                            </td>
                            <td>
                                {{ file.size | format_bytes }}
                            </td>
                        </tr>
                    {% endif %}
                    {% if file.pieces %}
                        <tr>
                            <td>
                                {{ 'Pieces'|trans }}
                            </td>
                            <td>
                                {{ file.pieces | format_number }}
                            </td>
                        </tr>
